<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CumparaProdus">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titlu"
        android:text="Produs"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titlu"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:text="Select Quantity:"
        android:id="@+id/tvcantitate"/>

    <EditText
        android:id="@+id/cantitate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titlu"
        android:layout_toRightOf="@+id/tvcantitate"
        android:inputType="number"
        android:hint="0"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvpret"
        android:layout_below="@+id/tvcantitate"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:text="Price:"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pret"
        android:layout_below="@+id/tvcantitate"
        android:text="0.0"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tvpret"
        android:layout_marginLeft="5dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvpret"
        android:text="Complete your order"
        android:id="@+id/button_completeOrder"/>
    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button_completeOrder"
        android:layout_below="@+id/pret"
        android:text="Cancel"/>


</RelativeLayout>